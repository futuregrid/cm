PROJECT=`basename $(PWD)`
DIR=/tmp/$(PROJECT)
DOC=$(DIR)/doc

test:
	echo $(PROJECT)

all:
	cd /tmp
	rm -rf $(DIR)
	cd /tmp; git clone git://github.com/futuregrid/$(PROJECT).git
	cd $(DOC); ls; make html
	cp -r $(DOC)/build/html/* .

